{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",  
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es2020",
  },
  "exclude": ["node_modules", "dist", "test"]
}
